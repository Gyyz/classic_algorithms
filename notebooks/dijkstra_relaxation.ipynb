   "source": [
    "# Dijkstra Relaxation States (Interactive)\n",
    "Observe distance updates per step while Dijkstra relaxes edges."
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "import matplotlib.pyplot as plt\n",
    "import ipywidgets as widgets\n",
    "from IPython.display import display\n",
    "\n",
    "graph = {\n",
    "    'A': [('B', 1), ('C', 4)],\n",
    "    'B': [('C', 2), ('D', 5)],\n",
    "    'C': [('D', 1)],\n",
    "    'D': []\n",
    "}\n",
    "nodes = list(graph.keys())\n",
    "\n",
    "def dijkstra_steps(graph, source):\n",
    "    from heapq import heappush, heappop\n",
    "    dist = {v: float('inf') for v in graph}\n",
    "    prev = {v: None for v in graph}\n",
    "    dist[source] = 0\n",
    "    pq = [(0, source)]\n",
    "    visited = set()\n",
    "    steps = []\n",
    "    while pq:\n",
    "        d, u = heappop(pq)\n",
    "        if u in visited:\n",
    "            continue\n",
    "        visited.add(u)\n",
    "        changed = []\n",
    "        for v, w in graph[u]:\n",
    "            nd = d + w\n",
    "            if nd < dist[v]:\n",
    "                dist[v] = nd\n",
    "                prev[v] = u\n",
    "                heappush(pq, (nd, v))\n",
    "                changed.append(v)\n",
    "        steps.append({'u': u, 'dist': dict(dist), 'prev': dict(prev), 'changed': changed})\n",
    "    return steps\n",
    "\n",
    "steps = dijkstra_steps(graph, 'A')\n",
    "step_slider = widgets.IntSlider(description='step', value=0, min=0, max=len(steps)-1)\n",
    "\n",
    "def plot_step(idx):\n",
    "    s = steps[idx]\n",
    "    vals = [s['dist'][n] for n in nodes]\n",
    "    plt.figure(figsize=(6,3))\n",
    "    plt.bar(nodes, [0 if v==float('inf') else v for v in vals], color=['orange' if n in s['changed'] else 'skyblue' for n in nodes])\n",
    "    plt.title(f"Extracted: {s['u']} | Changed: {s['changed']}")\n",
    "    plt.ylabel('distance')\n",
    "    plt.tight_layout()\n",
    "    plt.show()\n",
    "\n",
    "out = widgets.interactive_output(plot_step, {'idx': step_slider})\n",
    "display(step_slider, out)\n"
   ]
  }
